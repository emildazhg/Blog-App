<% include partials/header %>
  <div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui segment">
      <div class="ui divided items">
        <% blogs.forEach(blog =>{ %>
          <div class="item">
            <div class="image">
                <img class="card-img-top" src="<%= blog.image %>"  x="0" y="0" width="100%" height="100%">
            </div>
            <div class="content">
              <a class="header" href="/blogs/<%=blog._id%>"><%= blog.title %></a>
              <div class="meta">
                <p><%= blog.create.toDateString() %></p>
              </div>
              <div class="description">
                <p><%- blog.body.substring(0, 100) %></p>
              </div>
              <div class="extra">
                <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">Read more</a>
              </div>
            </div>
          </div>
        <% }) %>        
      </div>
    </div>
  </div>


<% include partials/footer %>